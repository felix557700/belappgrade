cv-template
  width: 100%

  input + label,
  input:invalid + label,
  textarea + label,
  textarea:invalid + label
    position: absolute
    left: 50%
    top: 50%
    font-size: 110%
    white-space: nowrap
    transform: translate(-50%, -50%)
    will-change: transform
    transition: all 0.3s

  input:focus + label,
  input:valid + label,
  textarea:focus + label,
  textarea:valid + label
    font-size: 80%;
    transform: translate(-110px, -18px)

  .col-1-1
    textarea:focus + label,
    textarea:valid + label
      transform: translate(-236px, -41px)

    input:focus + label,
    input:valid + label
      transform: translate(-236px, -18px)

    textarea#motivation:focus + label,
    textarea#motivation:valid + label
      transform: translate(-236px, -65px)

  input,
  textarea,
  button,
  select
    width: 100%
    background-color: rgba(253,152,0,0.6)
    color: #fff
    font-size: 20px
    padding: 16px 10px 4px
    border: 0
    border-radius: 5px
    outline: 0

  textarea
    resize: none
    word-break: break-all

  button
    padding: 5px
    border: 1px solid white
    cursor: pointer


  .row
    display: block
    max-width: 500px
    margin: 0 auto
    overflow: hidden

    .col
      position: relative
      float: left
      width: 100%
      padding: 5px

    .col.col-1-1
      width: 100%

    .col.col-1-2
      width: 50%

    .col.col-1-3
      width: 33.33333%

    .col.col-2-3
      width: 66.66666%

    .col.col-1-4
      width: 25%

    .col.col-3-4
      width: 75%