tooltip 
  position: absolute
  width: 320px
  padding: 10px
  text-align: center
  color: #000
  background-color: white
  transform: translate(-50%, calc(-100% - 26px))
  z-index: 999


tooltip:after 
  content: ""
  position: absolute
  display: block
  left: calc(50% - 10px)
  bottom: -19px
  border: 20px solid transparent
  border-width: 20px 10px 0 10px
  border-top-color: white


tooltip img 
  max-width: 100%
  max-height: 150px
