menu
  z-index: 10
  
  .container
    position: absolute
    display: block
    width: 50vw
    height: 65vh
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    background-color: rgba(0, 0, 0, 0.7)
    color: #fff

    &.active
      width: 400px
      height: 100vh
      top: 0
      left: 0
      margin: 0
      transform: none
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1)

      &.hide
        transform: translateX(-355px)


  .main-text
    font-size: 45px
    line-height: 1.3
    margin: 10%
    margin-bottom: 40px
    text-align: center

  .choose-text
    font-size: 28px
    text-align: center
    width: 500px
    margin: 36px auto

  .icon-group
    position: relative
    display: flex
    justify-content: space-between
    width: 300px
    top: 20px
    left: 50%
    transform: translateX(-50%)

  .container.active .icon-group
    top: 70px
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1) 50ms
    width: 65%

svg
  width: 98px
  height: 90px
  background: black

  g
    fill: #fff
    cursor: pointer

    &:hover
      fill: orange


.arrow
  position: absolute
  right: -12px
  bottom: 12px
  font-size: 48px
  will-change: transform
  transform: rotate(-90deg)
  transition: all 0.5s 0s ease-in-out
  transform-origin: center 75%

  &.active
    right: 8px
    bottom: 12px
    transform rotate(90deg)
    transition: all 0.5s 0s ease-in-out

.arrow-text
  position: absolute
  width: 480px
  left: 137px
  bottom: 281px
  font-size: 40px
  text-transform: uppercase
  transform: rotate(-90deg)
  opacity: 0

  &.active
    opacity 1
    transition: opacity 0.5s 0s