$tablet = 1200px
$phone-big = 790px
$phone = 550px

menu
  z-index: 10

  .container
    position: absolute
    display: block
    width: 50vw
    height: 65vh
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    background-color: rgba(0, 0, 0, 0.7)
    color: #fff
    @media (max-width: $tablet)
      width: 75vw
      height: 70vh
    @media (max-width: $phone-big)
      width: 90vw
      height: 85vh
    @media (max-width: $phone)
      width: 100vw
      height: 100vh
      z-index: 10

    &.active
      width: 400px
      height: 100vh
      top: 0
      left: 0
      margin: 0
      transform: none
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1)

      &.hide
        transform: translateX(-340px)

      &.hide *
          display: none


  .main-text
    font-size: 42px
    line-height: 1.3
    margin: 5%
    margin-bottom: 40px
    text-align: center
    @media (max-width: $phone-big)
      font-size: calc(10px + 4vw)

  .choose-text
    font-size: 28px
    text-align: center
    width: 500px
    margin: 36px auto
    @media (max-width: $phone-big)
      font-size: calc(8px + 3vw);
      width: auto
      margin: 36px

  .icon-group
    position: relative
    display: flex
    justify-content: space-between
    width: 300px
    top: 20px
    left: 50%
    transform: translateX(-50%)
    @media (max-width: $phone-big)
      max-width: 300px;
      width: 70vw;


  .container.active .icon-group
    top: 70px
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1) 50ms
    width: 65%

svg
  width: 98px
  height: 90px
  background: black

  g
    fill: #fff
    cursor: pointer

    &:hover
      fill: orange


.arrow-text
  position: absolute
  height: 60px
  bottom: -35px
  font-size: 40px
  line-height: 1.4
  text-transform: uppercase
  transform: rotate(-90deg)
  transform-origin: left top
  color: white
  opacity: 0
  pointer-events: none;

  &.active
    width: 85vh
    z-index: 10
    opacity 1
    transition: opacity 0.5s 0s


.arrow
  position: absolute
  top: 0
  left: 0
  cursor: pointer
  z-index: 11

.arrow-icon
  display: inline-block
  position: relative
  width: 60px
  min-width: 20px
  max-width: 60px
  max-height: 60px

.arrow-icon span 
  background: white
  position: absolute

.-chevron 
  height: 60px

.-chevron div 
  position: absolute
  top: 50%
  left: 50%
  transform: translate3d(-75%, -50%, 0) rotate(-45deg)
  transition: transform 0.6s cubic-bezier(0.4, 0, 0, 1) 0.2s
  width: calc(60px / 2)
  height: calc(60px / 2)

.-chevron span 
  position: absolute
  background: white

  &:nth-of-type(odd)
    width: 4px
    top: 0
    bottom: 0

  &:nth-of-type(even)
    height: 4px
    left: 0
    right: 0

  &:nth-of-type(1)
    right: 0
    transform-origin: bottom
    transition: transform 0.3s cubic-bezier(0.1, 0.5, 0.2, 1) 0.4s

  &:nth-of-type(2)
    bottom: 0
    transform-origin: left
    transition: transform 0.15s linear 0.3s

  &:nth-of-type(3)
    left: 0
    transform-origin: bottom
    transform: scale3d(1, 0, 1)
    transition: transform 0.15s linear 0.3s

  &:nth-of-type(4)
    top: 0
    transform-origin: left
    transform: scale3d(0, 1, 1)
    transition: transform 0.2s cubic-bezier(0.69, 0, 0.94, 1)


.-chevron.active div 
  transform: translate3d(-25%, -50%, 0) rotate(-45deg)

.-chevron.active span
  &:nth-of-type(1)
    transform-origin: top
    transform: scale3d(1, 0, 1)
    transition: transform 0.15s linear 0.3s

  &:nth-of-type(2)
    transform-origin: right
    transform: scale3d(0, 1, 1)
    transition: transform 0.2s cubic-bezier(0.69, 0, 0.94, 1)

  &:nth-of-type(3)
    transform-origin: top
    transform: scale3d(1, 1, 1)
    transition: transform 0.3s cubic-bezier(0.1, 0.5, 0.2, 1) 0.4s

  &:nth-of-type(4)
    transform-origin: right
    transform: scale3d(1, 1, 1)
    transition: transform 0.15s linear 0.3s

