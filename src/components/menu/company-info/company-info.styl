@keyframes show
  from
    opacity: 0
  to
    opacity: 1

company-info
  position: relative
  display: flex
  flex-direction: column
  justify-content: space-around
  align-items: stretch
  height: calc(100% - 220px)
  top: 120px
  padding: 0 20px 0 20px
  font-size: 18px
  line-height: 1.3
  opacity: 0
  animation: show 0.5s 0.25s
  animation-fill-mode: forwards

  img
    max-height: 100px
    max-width: 100%
    align-self: center


  .info-text
    margin-top: 20px
    margin-bottom: 20px
    overflow: auto
    white-space: pre-line

    &::first-letter
      font-size: 150%

  .social-links
    text-align: center
    margin-top: auto

    a
      color: transparent

    i
      padding: 10px
      color: #fff
      cursor: pointer

      &:hover
        color: orange

  .contact
    margin-top: 20px
    margin-bottom: 10px
    font-size: 14px


  //  Webkit scrollbar
  ::-webkit-scrollbar 
    width: 5px
  

  // Track
  ::-webkit-scrollbar-track 
    border-radius: 10px
    background: rgba(255, 255, 255, 0.26)
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3)
  

  // Handle
  ::-webkit-scrollbar-thumb 
    border-radius: 10px
    background: rgba(255, 255, 255, 0.8)
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5)
  